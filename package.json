{
    "name": "rescal",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "build": "npm run migrations && next build && sh ./post-build.sh && npm run register-webhook",
        "start": "next start",
        "start-db": "java -Djava.library.path=dynamodb/DynamoDBLocal_lib -jar dynamodb/DynamoDBLocal.jar",
        "migrations": "ts-node --project database/migrations/tsconfig.json database/migrations/migrate.ts",
        "lint": "tsc --noEmit && eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
        "register-webhook": "ts-node --project scripts/tsconfig.json scripts/register-webhook.ts",
        "clear-database": "ts-node --project scripts/tsconfig.json scripts/clear-database.ts",
        "test": "npm run clear-database && jest"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@sentry/browser": "5.12.1",
        "@sentry/integrations": "5.12.0",
        "@sentry/node": "5.12.3",
        "@zeit/next-css": "1.0.1",
        "@zeit/next-sass": "1.0.1",
        "aws-sdk": "2.614.0",
        "bulma": "0.8.0",
        "isomorphic-unfetch": "3.0.0",
        "next": "9.2.1",
        "node-sass": "4.13.1",
        "react": "16.12.0",
        "react-dom": "16.12.0",
        "telegraf": "3.36.0"
    },
    "devDependencies": {
        "@sentry/cli": "1.49.0",
        "@types/jest": "25.1.2",
        "@types/node": "13.7.0",
        "@types/react": "16.9.19",
        "@types/test-listen": "1.1.0",
        "@typescript-eslint/eslint-plugin": "2.19.0",
        "@typescript-eslint/parser": "2.19.0",
        "@zeit/next-source-maps": "0.0.4-canary.1",
        "eslint": "6.8.0",
        "eslint-config-prettier": "6.10.0",
        "eslint-plugin-prettier": "3.1.2",
        "eslint-plugin-react": "7.18.3",
        "eslint-plugin-react-hooks": "2.3.0",
        "husky": "4.2.1",
        "jest": "^25.1.0",
        "lint-staged": "10.0.7",
        "prettier": "1.19.1",
        "styled-jsx-plugin-sass": "1.0.0",
        "test-listen": "^1.1.0",
        "ts-jest": "^25.2.0",
        "ts-node": "8.6.2",
        "typescript": "3.7.5"
    },
    "prettier": {
        "trailingComma": "none",
        "tabWidth": 4,
        "semi": false,
        "singleQuote": true
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx,css,json}": [
            "eslint --fix",
            "git add"
        ],
        "*.{md}": [
            "prettier --write",
            "git add"
        ]
    },
    "jest": {
        "preset": "ts-jest"
    }
}
