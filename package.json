{
    "name": "rescal",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "build": "npm run migrations && next build && sh ./post-build.sh && npm run register-webhook",
        "start": "next start",
        "start-db": "java -Djava.library.path=dynamodb/DynamoDBLocal_lib -jar dynamodb/DynamoDBLocal.jar",
        "migrations": "ts-node --project migrations/tsconfig.json migrations/migrate.ts",
        "lint": "tsc --noEmit && eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
        "register-webhook": "ts-node --project scripts/tsconfig.json scripts/register-webhook.ts"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@sentry/browser": "5.11.1",
        "@sentry/integrations": "5.11.1",
        "@sentry/node": "5.11.1",
        "@zeit/next-css": "1.0.1",
        "@zeit/next-sass": "1.0.1",
        "aws-sdk": "2.607.0",
        "bulma": "0.8.0",
        "isomorphic-unfetch": "3.0.0",
        "next": "9.2.0",
        "node-sass": "4.13.1",
        "react": "16.12.0",
        "react-dom": "16.12.0",
        "telegraf": "^3.35.0"
    },
    "devDependencies": {
        "@sentry/cli": "1.49.0",
        "@types/node": "13.1.8",
        "@types/react": "16.9.18",
        "@typescript-eslint/eslint-plugin": "2.17.0",
        "@typescript-eslint/parser": "2.17.0",
        "@zeit/next-source-maps": "0.0.4-canary.1",
        "eslint": "6.8.0",
        "eslint-config-prettier": "^6.9.0",
        "eslint-plugin-prettier": "^3.1.2",
        "eslint-plugin-react": "7.18.0",
        "eslint-plugin-react-hooks": "2.3.0",
        "husky": "4.0.10",
        "lint-staged": "10.0.1",
        "prettier": "1.19.1",
        "styled-jsx-plugin-sass": "1.0.0",
        "ts-node": "8.6.2",
        "typescript": "3.7.5"
    },
    "prettier": {
        "trailingComma": "none",
        "tabWidth": 4,
        "semi": false,
        "singleQuote": true
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx,css,json}": [
            "eslint --fix",
            "git add"
        ],
        "*.{md}": [
            "prettier --write",
            "git add"
        ]
    }
}
